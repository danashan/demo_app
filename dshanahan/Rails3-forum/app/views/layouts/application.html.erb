<!DOCTYPE html>
<html>
<head>
  <title>Forums</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="site">
    <div id="header">
	
      <h1><%= link_to "Forums", root_path %></h1>
 		<h3><%= link_to "Users", users_path %></h3>
		<% if signed_in? %>
		      <h3><li><%= link_to "Profile", current_user %></li>
				<li><%= link_to "Settings", edit_user_path(current_user) %></li>
			</h3>
		      <% end %>
		<h3> <% if signed_in? %>
			<h3><li><%= link_to "Sign out", signout_path, :method => :delete %></li>
		<% else %>
		<li><%= link_to "Sign in", signin_path %></li>
		<p>New user? <%= link_to "Sign up now!", signup_path %></p>
	</h3>
	
      	
	      <% end %>
	


    </div> 
	
    <div id="main">
      <%= yield %>
    </div> 

    <div id="footer">
       <%= debug(params) if Rails.env.development? %>

    </div>
  </div> 
</body>
</html>
